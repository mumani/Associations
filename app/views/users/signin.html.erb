<h1>Sign In</h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(:user, url: login_path) do |f| %>

        <%= f.label :id, 'User ID' %>
        <%= f.text_field :id, class: 'form-control' %>

        <br>

        <%= f.submit "Sign In", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>