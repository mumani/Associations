<%= form_for(@event) do |f| %>

  <%= f.label :name %>
  <%= f.text_field :name, class: 'form-control' %>

  <%= f.label :description %>
  <%= f.text_area :description, placeholder: "Enter Description...", class: 'form-control' %>
  
  <%= f.submit "Create Event", class: "btn btn-primary" %>
<% end %>