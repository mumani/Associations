<div class="container">

<h2>New Event</h2>

<%= form_for(@event) do |f| %>

  <%= f.label :name %>
  <%= f.text_field :name, class: 'form-control' %>

  <%= f.label :description %>
  <%= f.text_area :description, placeholder: "Enter Description...", class: 'form-control' %>

  <%= f.label :event_date, 'Date of Event' %>
  <%= f.date_field :event_date, class: 'form-control' %>
  
  <%= f.submit "Create Event", class: "btn btn-primary mt-2" %>
  <div class="d-flex justify-content-end mt-3">
      <button type="button" class="btn btn-default"><%= link_to 'Go Back', :back, class: 'white' %></button>
    </div>
<% end %>



    </div>